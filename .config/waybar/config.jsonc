{
    // -------------------------------------------------------------------------
    // Global configuration
    // -------------------------------------------------------------------------

    "include": [
      "/usr/share/sway/templates/waybar/config.jsonc"
    ],

    // If height property would be not present, it would be calculated dynamically
    // "height": 28,
    "position": "top",
    "layer": "bottom",

    "modules-left": [
      "custom/menu",
      "sway/workspaces",
      "bluetooth",
      "custom/spotify"
      // "network"
    ],
    "fixed-center": true,
    "modules-center": [
      "sway/mode",
      "custom/weather",
      "clock",
      "custom/wf-recorder"
      // "custom/updates",
      // "custom/notifications",
    ],
    "modules-right": [
        // informational
        // "sway/language",
        "custom/github",
        "custom/clipboard",
        "custom/idle_inhibitor",
        "custom/dnd",
        // "custom/sunset",
        // "custom/zeit",
        "network",
        // "cpu",
        "backlight",
        "temperature",
        // "memory",
        // "battery",

        // connecting
        // "network",
        // "bluetooth",
        "tray",

        // media
        "pulseaudio",
        "pulseaudio#microphone",
        // "custom/adaptive-light",

        // system
        // "custom/sunset",
        // "custom/pacman",
        "battery"

        // "clock"
    ],

    "battery": {
      "states": {
        "good": 100,
        "warning": 20,
        "critical": 10
      },
      "format-charging": "󰂄 {capacity}%",
      "format": "{icon} {capacity}%",
      "format-icons": ["󱃍", "󰁺", "󰁼", "󰁽", "󰁾", "󰁿", "󰂀", "󰂁", "󰂂", "󰁹"],
      // "tooltip": true
    },
    "bluetooth": {
      "format": "",
      "format-disabled": "󰂲",
      "format-connected": " {num_connections}",
      "tooltip-format": "{status}",
      "tooltip-format-connected": "{device_alias} {status}",
      "format-connected-battery": " {device_alias} {device_battery_percentage}%",
      "tooltip-format-enumerate-connected": "{device_alias}",
      "on-click": "swaymsg exec \\$bluetooth",
      "on-click-right": "rfkill toggle bluetooth"
    },
    // clock with annual calendar
    "clock": {
      "interval": 60,
      "format": " {:%H:%M}",
      // "format": " {:%e %b %Y  %H:%M}",
      // "format": " {:%e %B %Y %H:%M}",
      "format-alt": " {:%A, %d. %B %Y (%R)}",
      "tooltip": true,
      "tooltip-format": "<tt><small>{calendar}</small></tt>",
      "on-click": "",
      "calendar": {
        "mode"          : "year",
        "mode-mon-col"  : 3,
        "weeks-pos"     : "right",
        "on-scroll"     : 1,
        "on-click-right": "mode",
        "format": {
          "months":     "<span color='#ffead3'><b>{}</b></span>",
          "days":       "<span color='#ecc6d9'><b>{}</b></span>",
          "weeks":      "<span color='#accafb'><b>W{}</b></span>",
          "weekdays":   "<span color='#ffcc66'><b>{}</b></span>",
          "today":      "<span color='#ff6699'><b><u>{}</u></b></span>"
        }
      }
    },
    "pulseaudio": {
      "scroll-step": 5,
      "format": "{icon} {volume}%{format_source}",
      "format-muted": "󰖁 {format_source}",
      "format-source": "",
      "format-source-muted": "",
      "format-icons": {
        "headphone": "󰋋",
        "headset": "󰋎",
        "default": ["󰕿", "󰖀", "󰕾"]
      },
      "tooltip-format": "{icon} {volume}% {format_source}",
      "on-click": "swaymsg exec \\$pulseaudio",
      "on-click-right": "swaymsg exec \\$volume_mute",
      "on-scroll-up": "swaymsg exec \\$volume_up",
      "on-scroll-down": "swaymsg exec \\$volume_down"
    },
    "pulseaudio#microphone": {
      "format": "{format_source}",
      "format-source": " {volume}%",
      "format-source-muted": " ",
      "on-click": "swaymsg exec \\$pulseaudio",
      "on-click-right": "wpctl set-mute @DEFAULT_SOURCE@ toggle",
      "on-scroll-up": "wpctl set-volume @DEFAULT_SOURCE@ 5%+",
      "on-scroll-down": "wpctl set-volume @DEFAULT_SOURCE@ 5%-"
    },
    "temperature": {
      "critical-threshold": 90,
      "interval": 5,
      "format": "{icon} {temperatureC}°C",
      "format-icons": ["", "", ""],
      "tooltip": true,
      "on-click": "swaymsg exec \"\\$once \\$term_float watch sensors\""
    },
    "tray": {
      "icon-size": 20,
      "spacing": 2
    },
    "custom/spotify": {
      "interval": 5,
      "exec": "playerctl -p spotify metadata --format '{{title}} - {{artist}}'",
      "format": " {}",
      "on-click-middle": "playerctl -p spotify play-pause",
      "on-scroll-up": "playerctl -p spotify next",
      "on-scroll-down": "playerctl -p spotify previous",
        // "signal": 10
    },
    // weather for Bern
    "custom/weather": {
      "icon-size": 42,
      "format": "{icon} {}",
      "tooltip": true,
      "interval": 3600,
            // accepts -c/--city <city> -t/--temperature <C/F> -d/--distance <km/miles>
            "exec": "/usr/share/sway/scripts/weather.py -c Bern",
            "return-type": "json",
            "format-icons": {
              "Unknown": "",
              "Cloudy": "󰖐",
              "Fog": "",
              "HeavyRain": "",
              "HeavyShowers": "",
              "HeavySnow": "",
              "HeavySnowShowers": "󰜗",
              "LightRain": "",
              "LightShowers": "",
              "LightSleet": "",
              "LightSleetShowers": "",
              "LightSnow": "",
              "LightSnowShowers": "󰙿",
              "PartlyCloudy": "",
              "Sunny": "",
              "ThunderyHeavyRain": "󰙾",
              "ThunderyShowers": "",
              "ThunderySnowShowers": "",
              "VeryCloudy": ""
            }
    }
}
